# HomeCase Portal Configuration
HOMECASE_URL_LOGIN=https://www.homecase.de/anmelden
HOMECASE_URL_MESSAGES=https://www.homecase.de/123456/objekte/123/nachrichten/a12345b6-123a-123a-abc0-ab1c2d345678 # add the URL of the message stream, example given left
HOMECASE_USERNAME=your_username
HOMECASE_PASSWORD=your_password
# Sleep time between HTTP requests to HomeCase in seconds (helps avoid server overload)
REQUEST_DELAY_SECONDS=0.5

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
# Database schema name (default: public). Schema will be created if it doesn't exist.
DATABASE_SCHEMA=public

# SMTP Email Configuration
SMTP_HOST=example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Email Settings
EMAIL_FROM=sender@example.com
EMAIL_TO=recipient1@example.com,recipient2@example.com
# Optional: Comma-separated list of CC recipients
# EMAIL_TO_CC=cc1@example.com,cc2@example.com
TENANT_GREETING=Liebe Mieter*in,
# Optional: Email signature (will be appended to email body if provided)
# EMAIL_SIGNATURE=Viele Grüße\nYour Name\n\n--\nYour Address\nYour Contact Info

# Logging Configuration (Optional)
LOG_LEVEL=INFO
# LOG_FILE=/path/to/logfile.log
